<script type="text/javascript">



function formValidate()
{

	var x = document.forms["registerationform"]["firstname"].value;
    if (!nullcheck(x)) 
{
	alert("Name must be filled out");
}
	if(!allLetter(x))
{
	alert("Name must have characters only");
}
	if(!stringlength(x,20))
{
	alert("Please input the name between 0 and 20 characters");
}
	var y = document.forms["registerationform"]["lastname"].value;
	if(!allLetter(y))
{
	alert("Last name must have characters only");
}
	if(!stringlength(y,20))
{
	alert("Please input the last name between 0 and 20 characters");
}

	var z = document.forms["registerationform"]["contact"].value;
    if (!nullcheck(z)) 
{
	alert("Contact number must be filled out");
}
	if(!allnumeric(z))
{
	alert("Contact number must have digits only");
}
	if(!stringlength(z,10))
{
	alert("Please input the contact number of 10 digits");
}

	var a = document.forms["registerationform"]["email"].value;
    if (!nullcheck(a)) 
{
	alert("Email must be filled out");
}
	if(!ValidateEmail(a))
{
	alert("Email is invalid");
}

	var b = document.forms["registerationform"]["username"].value;
    if (!nullcheck(b)) 
{
	alert("Username must be filled out");
}


	var c = document.forms["registerationform"]["password"].value;
    if (!nullcheck(c)) 
{
	alert("Password must be filled out");
}
	if(!CheckPassword(c))
{
	alert("Password is incorrect");
}


}

function allLetter(var inputtxt)  
  {  
   var letters = /^[A-Za-z]+$/;  
   if(inputtxt.value.match(letters))  
     {  
      return true;  
     }  
   else  
     {   
     return false;  
     }  
  }  

function nullcheck(var x)
{
if (x == null || x == "") 
{
        return false;
}
else
{
return true;
}
}

function stringlength(var x,var maxlength)  
{   
if(x.length<=0 || x.length>=maxlenght)  
{     
return false;  
}  
else  
{     
return true;  
}  
}

function allnumeric(var inputtxt)  
   {  
      var numbers = /^[0-9]+$/;  
      if(inputtxt.value.match(numbers))  
      {   
      return true;  
      }  
      else  
      {  
       return false;  
      }  
   }


function ValidateEmail(var uemail)  
{  
var mailformat = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;  
if(uemail.value.match(mailformat))  
{  
return true;  
}  
else  
{    
return false;  
}     

function CheckPassword(var inputtxt)   
{   
var passw=  /^[A-Za-z]\w{6,15}$/;  
if(inputtxt.value.match(passw))   
{     
return true;  
}  
else  
{     
return false;  
}  
}  


